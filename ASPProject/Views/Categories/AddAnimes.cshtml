@model List<ASPProject.Models.GetCatAnimes>

<h1 class="bg-info text-white">Add Anime</h1>
<a asp-action="Index" class="btn btn-secondary">Back</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">


    <h2 class="bg-info p-1 text-white">Add To @Model[0].CatName</h2>
    <table class="table table-bordered table-sm">

        @for (int i = 0; i < Model.Count; i++)
        {

                @if (Model[i].IsSelected == false)
                {
                    <tr>
                        <td>@Model[i].AnimeName</td>
                        <td>
                            <input type="hidden" asp-for="@Model[i].CatID" />
                            <input type="hidden" asp-for="@Model[i].AnimeID" />
                            <input asp-for="@Model[i].IsSelected" class="form-check-input" />

                        </td>
                    </tr>
                }
}

    </table>

    <h2 class="bg-info p-1 text-white">Remove From @Model[0].CatName</h2>
    <table class="table table-bordered table-sm">
        @for (int i = 0; i < Model.Count; i++)
        {

            @if (Model[i].IsSelected == true)
            {
                <tr>
                    <td>@Model[i].AnimeName</td>
                    <td>
                        <input type="hidden" asp-for="@Model[i].CatID" />
                        <input type="hidden" asp-for="@Model[i].AnimeID" />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />

                    </td>
                </tr>
            }
        }


    </table>
    <input type="submit" class="btn btn-primary" value="Save"/>
</form>