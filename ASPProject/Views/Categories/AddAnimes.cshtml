@model ASPProject.Models.GetCatAnimes

<h1 class="bg-info text-white">Add Anime</h1>
<a asp-action="Index" class="btn btn-secondary">Back</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post" asp-action="AddAnimes">
    <input type="hidden" asp-for="Category" value="@Model.Category" />

    <h2 class="bg-info p-1 text-white">Add To @Model.Category.Name</h2>
    <table class="table table-bordered table-sm">
        @if (Model.NotMember.Count() == 0)
        {
            <tr><td colspan="2">All Users Are Members</td></tr>
        }
        else
        {
            @foreach (Anime anime in Model.NotMember)
            {
                <tr>
                    <td>@anime.Name</td>
                    <td>
                        <input type="checkbox" name="delete" value="@anime.ID">
                    </td>
                </tr>
            }
        }
    </table>

    <h2 class="bg-info p-1 text-white">Remove From @Model.Category.Name</h2>
    <table class="table table-bordered table-sm">
        @if (Model.Member.Count() == 0)
        {
            <tr><td colspan="2">No Users Are Members</td></tr>
        }
        else
        {
            @foreach (Anime anime in Model.Member)
            {
                <tr>
                    <td>@anime.Name</td>
                    <td>
                        <input type="checkbox" name="add" value="@anime.ID">
                    </td>
                </tr>
            }
        }
    </table>
    <button type="submit" class="btn btn-primary">Save</button>
</form>