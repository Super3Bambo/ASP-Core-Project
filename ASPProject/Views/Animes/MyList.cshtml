@model IEnumerable<ASPProject.Models.Anime>

@{
    ViewData["Title"] = "MyList";
}


<div class="w-100 bg-dark mb-5" style="border: 1px solid red;box-shadow: 2px 10px 8px #888888; ">
    <div class="text-center"> <img src="~/images/1455542413-6b19ce62d01ef05368166ff6db661484.png" /> </div>
    <div class="row justify-content-around">

        <div class=" form-group text-center" style="width:10%">
            <a class="btn btn-outline-danger text-white col-10" 
               asp-controller="Animes" asp-action="MyList">All</a>
                
        </div>
                
    <div class="form-group " style="width:10%" >
        <form method="post" >

            <input type="hidden" name="filter" value="1" />
            <input type="submit" value="Watching" class="btn btn-outline-danger text-white col-10" />
        </form>

    </div>
        
      
    <div class="form-group text-center" style="width:10%">
        <form method="post">
        <input type="hidden" name="filter" value="2" />

        <input type="submit" value="Completed" class="btn btn-outline-danger text-white col-12" />
                    </form>

    </div>
       
    <div class="form-group" style="width:10%">
        <form method="post">
            <input type="hidden" name="filter" value="3" />

            <input type="submit" value="On Hold" class="btn btn-outline-danger text-white col-10" />
        </form>

    </div>
              
            <div class="form-group " style="width:10%">
                <form method="post">
                    <input type="hidden" name="filter" value="4" />

                    <input type="submit" value="To Watch" class="btn btn-outline-danger text-white col-10" />
                </form>

            </div>
          
               
            <div class="form-group" style="width:10%">
                <form method="post">
                    <input type="hidden" name="filter" value="5" />

                    <input type="submit" value="Dropped" class="btn btn-outline-danger text-white col-10" />
                    </form>
            </div>

    </div>
    <div>
        <table class="table table-striped table-dark">
            <thead>
                <tr class="text-center">
                    <th>
                        #
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        Img
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Rating)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ReleaseYear)
                    </th>
                    <th>
                        Show
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                        var i = 0;
                        foreach (var item in Model)
                        {
                <tr class="text-center">
                    <td>
                        @(++i)
                    </td>
                 <td >
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                     <td >
                        <img src="@("~/Images/" + item.ImageName)" style="object-fit:cover;width:100px;height:90px;border-radius:10px" asp-append-version="true" />
                    </td>
                   
                    <td >
                        @Html.DisplayFor(modelItem => item.Rating)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReleaseYear)
                    </td>
                    <td>
                        <a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.ID" asp-controller="Home">Show</a>
                    </td>
                   
                </tr>}
            
            
                    }
            </tbody>
        </table>



    </div>

</div>



